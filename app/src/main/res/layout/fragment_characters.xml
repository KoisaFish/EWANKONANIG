<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_characters">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- Centered Text -->
            <TextView
                android:id="@+id/createCharacterText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="Create your character here"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Horizontal Scroll Buttons -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnStats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stats"
                        android:backgroundTint="@color/scarlet"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnFeatures"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Features"
                        android:backgroundTint="@color/scarlet"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnInventory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inventory"
                        android:backgroundTint="@color/scarlet"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnSpells"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spells"
                        android:backgroundTint="@color/scarlet"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnPersona"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Persona"
                        android:backgroundTint="@color/scarlet"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnJournal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Journal"
                        android:backgroundTint="@color/scarlet"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Fragment Container -->
            <FrameLayout
                android:id="@+id/fragment_Container"
                android:layout_width="411dp"
                android:layout_height="430dp"
                android:layout_marginTop="20dp"
                android:background="#EEEEEE" />
        </LinearLayout>
    </ScrollView>

    <!-- Save Button (bottom-left) -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:backgroundTint="@color/scarlet"
        android:elevation="4dp"
        android:text="Save"
        android:textColor="@android:color/white" />

    <!-- Floating Action Button (bottom-right) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="@color/scarlet"
        android:contentDescription="Add Description" />
</FrameLayout>
