<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    android:id="@+id/CharacterCreate">

    <!-- Top App Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#333333"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Characters"
        app:titleTextColor="#FFFFFF" />

    <!-- Centered Message and Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/toolbar"
        android:layout_centerInParent="true"
        android:padding="20dp">

        <TextView
            android:id="@+id/waka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You don't seem to have any characters yet"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/addCharacterBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD CHARACTER"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF"
            android:elevation="4dp" />
    </LinearLayout>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Add Character"
        app:backgroundTint="#D32F2F" />

</RelativeLayout>
